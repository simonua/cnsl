{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/pools.schema.json",
  "title": "Pool Data Schema",
  "description": "Schema for pool data containing schedules, features, and location information",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "pools": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Pool"
      },
      "minItems": 1
    }
  },
  "required": ["pools"],
  "additionalProperties": false,
  "definitions": {
    "Pool": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/NonEmptyString"
        },
        "address": {
          "$ref": "#/definitions/NonEmptyString"
        },
        "mapsQuery": {
          "$ref": "#/definitions/NonEmptyString"
        },
        "lat": {
          "$ref": "#/definitions/Latitude"
        },
        "lng": {
          "$ref": "#/definitions/Longitude"
        },
        "features": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FeatureType"
          }
        },
        "schedules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Schedule"
          }
        }
      },
      "required": ["name", "address", "mapsQuery", "lat", "lng", "features"],
      "additionalProperties": false
    },
    "Schedule": {
      "type": "object",
      "properties": {
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "url": {
          "$ref": "#/definitions/NonEmptyString"
        },
        "hours": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Hours"
          }
        }
      },
      "required": ["startDate", "endDate", "url", "hours"],
      "additionalProperties": false
    },
    "Hours": {
      "type": "object",
      "properties": {
        "weekDay": {
          "$ref": "#/definitions/WeekDayType"
        },
        "startTime": {
          "$ref": "#/definitions/TimeType"
        },
        "endTime": {
          "$ref": "#/definitions/TimeType"
        },
        "type": {
          "oneOf": [
            {
              "$ref": "#/definitions/ScheduleType"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ScheduleType"
              },
              "minItems": 1
            }
          ]
        },
        "notes": {
          "type": "string"
        }
      },
      "required": ["weekDay", "startTime", "endTime", "type"],
      "additionalProperties": false
    },
    "NonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "Latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "Longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "FeatureType": {
      "type": "string",
      "enum": [
        "basketball",
        "dive",
        "lap",
        "shade",
        "slide",
        "splash",
        "volleyball",
        "wading"
      ]
    },
    "WeekDayType": {
      "type": "string",
      "enum": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ]
    },
    "ScheduleType": {
      "type": "string",
      "enum": [
        "AquaFitness",
        "Closed",
        "Laps",
        "Rec",
        "SwimMeet"
      ]
    },
    "TimeType": {
      "type": "string",
      "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9](AM|PM|am|pm)$"
    }
  }
}
